<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h1 class="page-heading">ログイン画面</h1>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn user-btn" %>
        </div>
        <%= link_to "ユーザー新規登録", new_registration_path(resource_name), class: "btn user-btn" %>
      <% end %>
    </div>
  </div>
</div>